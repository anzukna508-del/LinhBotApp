<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#18191a" 
    tools:context=".MainActivity">

    <!-- HEADER (Giống file JS) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#242526"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp">

        <!-- Avatar này sẽ đổi mặt khi Bot chat -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgHeaderAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/linh_avatar"
            app:civ_border_width="2dp"
            app:civ_border_color="#0084ff"/>

        <TextView
            android:text="Linh Bot"
            android:textColor="#e4e6eb"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
        
        <ImageView
            android:layout_width="24dp" android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_preferences"
            app:tint="#b0b3b8"/>
    </LinearLayout>

    <!-- LIST CHAT -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:clipToPadding="false"/>

    <!-- INPUT AREA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#242526"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nhập tin nhắn..."
            android:textColor="#e4e6eb"
            android:textColorHint="#b0b3b8"
            android:background="@drawable/rounded_input_background"
            android:padding="12dp"
            android:maxLines="4"
            android:textSize="15sp"/>

        <!-- Nút gửi là ImageView cho đẹp -->
        <ImageView
            android:id="@+id/btnSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_send"
            app:tint="#0084ff"
            android:padding="5dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>